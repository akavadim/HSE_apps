@model Arnet.Web.Models.Agency.InvitesViewModel[]
@{
    ViewData["Title"] = "Приглашения";
}

@section Styles{ 
<style>
    .btn-copy{
        width:126px;
    }
</style>
}

@Html.Partial("_AgentInviteTabs")
<table class="table">
    <thead>
        <tr>
            <th>Ссылка</th>
            <th>Истекает(UTC)</th>
            <th>Удалить</th>
        </tr>
    </thead>
    <tbody>
        @for(int i=0; i<Model.Count(); i++)
        {
            <tr>
                <td>
                    <div class="input-group">
                        <input id="url-text-@i" class="form-control" name="url-text" value="@Model[i].Url" readonly />
                        <div class="input-group-append">
                            <button class="btn btn-primary btn-copy" input-id="@i">Копировать</button>
                        </div>
                    </div>
                </td>
                <td>@Model[i].DateTo</td>
                <td>@Html.ActionLink("Удалить","RemoveInvite", "Agency", new { companyId=ViewBag.CompanyId, inviteId=Model[i].InviteId })</td>
            </tr>
        }
    </tbody>
</table>

@section Scripts{ 
<script src="~/js/Agency/Invites.js"></script>
}
