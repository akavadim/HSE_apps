@model Arnet.Web.Models.Admin.EditAccountViewModel
@{
    ViewData["Title"] = "Редактирование аккаунта";
}
<a href="@Url.Action("Users","Admin")">Назад</a>
    <form method="post">
        @Html.ValidationSummary()
        <div class="form-group">
            <label>ID</label>
            <input type="text" class="form-control" readonly asp-for="Account.AccountId" />
        </div>
        <div class="form-group">
            <label>Тип аккаунта</label>
            <input type="text" class="form-control" readonly asp-for="Account.AccountType.Type" />
        </div>
        <div class="form-group">
            <label>Фамилия*</label>
            <input type="text" class="form-control" asp-for="Account.SecondName" />
        </div>
        <div class="form-group">
            <label>Имя*</label>
            <input type="text" class="form-control" asp-for="Account.FirstName" />
        </div>
        <div class="form-group">
            <label>Отчество</label>
            <input type="text" class="form-control" asp-for="Account.MiddleName" />
        </div>
        <div class="form-group">
            <label>Телефон*</label>
            <input type="text" class="form-control" asp-for="Phone.Number" />
        </div>
        <div class="form-group">
            <label>Email</label>
            <input type="text" class="form-control" asp-for="Email.Value" />
        </div>
        <div class="form-group">
            <label>Пароль</label>
            <input type="text" class="form-control" asp-for="Password.Value" />
        </div>
        <p>
            <input type="submit" class="btn btn-primary" value="Сохранить" />
        </p>
    </form>